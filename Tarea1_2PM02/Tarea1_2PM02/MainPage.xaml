<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1_2PM02.MainPage">

    <StackLayout>
        <Label Text="Información de la persona" FontSize="64" HorizontalTextAlignment="Center" TextColor="YellowGreen"/>

        <Label Margin="100"/>
        <Entry x:Name="txtnombre"   Placeholder="nombre..."     PlaceholderColor="DarkGray"   Keyboard="Text"    HorizontalTextAlignment="Center" TextColor="#050505" BackgroundColor="#FAF2F2"/>
        <Entry x:Name="txtapellido" Placeholder="apellido..."   PlaceholderColor="DarkGray" Keyboard="Text"    HorizontalTextAlignment="Center" TextColor="#050505" BackgroundColor="#FAF2F2"></Entry>
        <Entry x:Name="txtedad"     Placeholder="edad..."       PlaceholderColor="DarkGray" Keyboard="Numeric" HorizontalTextAlignment="Center" TextColor="#050505" BackgroundColor="#FAF2F2"></Entry>
        <Entry x:Name="txtcorreo"   Placeholder="correo..."     PlaceholderColor="DarkGray" Keyboard="Email"   HorizontalTextAlignment="Center" TextColor="#050505" BackgroundColor="#FAF2F2"  ></Entry>

        <Button x:Name="btnenviar" Text="Enviar Datos" CornerRadius="40" HorizontalOptions="Center" BackgroundColor="Green" Clicked="btnenviar_Clicked"/>

    </StackLayout>

</ContentPage>
