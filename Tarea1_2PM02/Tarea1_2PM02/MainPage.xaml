<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1_2PM02.MainPage">

    <StackLayout>
        
        <Entry x:Name="txtnombre" Placeholder="nombre..." Keyboard="Text" HorizontalTextAlignment="Center" TextColor="#050505"/>
        <Entry x:Name="txtapellido" Placeholder="apellido..." Keyboard="Text" HorizontalTextAlignment="Center" TextColor="#050505"></Entry>
        <Entry x:Name="txtedad" Placeholder="edad..." Keyboard="Numeric" HorizontalTextAlignment="Center" TextColor="#050505"></Entry>
        <Entry x:Name="txtcorreo" Placeholder="correo..." Keyboard="Email" HorizontalTextAlignment="Center" TextColor="#050505" ></Entry>

        <Button x:Name="btnenviar" Text="Enviar Datos" CornerRadius="40" Clicked="btnenviar_Clicked"/>

    </StackLayout>

</ContentPage>
